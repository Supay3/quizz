{% extends 'base.html.twig' %}

{% block title %}Quizz{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Quizz</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ quizz.nom }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ quizz.createdAt ? quizz.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ quizz.updatedAt ? quizz.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path(constant('App\\Controller\\NomRoute::ADMIN_QUIZZ_INDEX')) }}">Retour à la liste</a>

        <a href="{{ path(constant('App\\Controller\\NomRoute::ADMIN_QUIZZ_EDIT'), {'id': quizz.id}) }}">Éditer</a>

        {{ include('admin_quizz/_delete_form.html.twig') }}
    </div>
{% endblock %}
